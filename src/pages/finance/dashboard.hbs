<!DOCTYPE html>
<html lang="en">
  {{#> head }}
    {{> financeBranding }}
  {{/head}}
  <body onload="bxi.pageLoad()" class="bxi finance dashboard">
    {{> variables}}
    <header class="bxi-header bxi-banner">
      <nav class="navbar navbar-expand-lg pt-lg-4 flex-wrap navbar-dark">
        <div class="container">
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
          </button>
          <a class="navbar-brand pt-0" href="#">
            <img width="200" src="{{settings.images.logo}}" alt="Logo" />
          </a>
          <div class="d-flex flex-row position-relative">
            {{> notificationIcon class="mt-2 me-3 d-none d-lg-block" }}
            <div class="bxi-auth-buttons bxi-auth-buttons--white-link bxi-bg-secondary bxi-bg-lg-transparent collapse navbar-collapse p-2 py-lg-1">
              {{> userIcon class="d-none d-lg-inline me-3"}}
              <button onclick="bxi.logout()" class="bxi-button">Log Out</button>
            </div>
            <div class="bxi-user-icon bxi-bg-primary" data-bs-toggle="collapse" data-bs-target=".bxi-auth-buttons">
              {{> userIcon }}
            </div>
          </div>
        </div>
        <div class="container">
          <div class="bxi-navbar bxi-bg-secondary bxi-bg-lg-transparent collapse navbar-collapse mt-2 bxi-zi-2" id="navbarNav">
            <ul class="navbar-nav p-3 p-lg-0 py-lg-4">
              {{#each settings.header.links}}
              <li class="nav-item pb-2"><a class="bxi-link bxi-link--white fs-6 ps-0 pe-lg-4">{{this}}</a></li>
              {{/each}}
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <section class="bxi-component-bg-color">
      <div class="container py-3">
        <div class="d-flex flex-column flex-md-row justify-content-center justify-content-md-between align-items-center">
          <h2 class="fw-boldish">{{settings.dashboard.welcome}} <span class="fw-boldish" id="username-container">{{settings.dashboard.username}}</span></h2>
          <div class="d-flex flex-column flex-md-row justify-content-end">
            {{!-- See src/dashboard-buttons.hbs to update dashboard buttons --}}
            {{> dashboardButtons}}
          </div>
        </div>
      </div>
    </section>
    <section class="container">
      <div class="portal">
        <div class="row mt-4">
          <div class="col-lg-4 order-2 order-lg-1">
            <ul class="ls-none ps-0 mb-3">
              {{#each settings.dashboard.sidebar.links}}
              <li class="mb-2 ps-5 p-3 bxi-component-bg-color rounded-3 position-relative portal-sidebar-dropdown cursor-pointer">
                {{this}}
              </li>
              {{/each}}
            </ul>
            <div class="rewards-card p-4 rounded-4 overflow-hidden ms-auto mb-4">
              <h4 class="rewards-card-color">{{settings.rewards_card.title}}</h4>
              <p class="rewards-card-color fs-7">{{settings.rewards_card.sub_title}}</p>
              <a href="#" class="bxi-button bxi-button--link">{{settings.rewards_card.link}}</a>
              <img class="rewards-card-image d-block" src="{{settings.rewards_card.image}}" />
            </div>
          </div>
          <div class="col-lg-8 order-1 order-lg-2">
            <div class="row mb-3">
              <div class="col-sm-6 text-center text-sm-start">
                <h4 class="mb-3 mb-sm-0 mt-1 fw-boldish">{{settings.dashboard.portal.title}}</h4>
              </div>
              <div class="col-sm-6 d-flex justify-content-center justify-content-sm-end">
                <div class="portal-header-dropdown bxi-component-bg-color fst-italic py-2 ps-3 pe-5 rounded-1 position-relative cursor-pointer">
                  {{settings.dashboard.portal.dropdown_placeholder}}
                </div>
              </div>
            </div>
            {{#each settings.dashboard.portal.account_tiles}}
            <div class="account-tile bxi-component-bg-color mb-3 mb-lg-4 ps-5 p-3 position-relative rounded-bottom">
              <div class="row mb-3">
                <div class="col-7 d-flex align-items-center">
                  <h6>{{title}}</h6>
                </div>
                <div class="col-5">
                  <button class="bxi-button w-100 bxi-truncate py-2">{{action}}</button>
                </div>
              </div>
              <div class="row">
                <div class="col-7 d-flex align-items-center">
                  <div class="fw-light fs-8">{{first_header}}</div>
                </div>
                <div class="col-5">
                  <div class="fw-light fs-8">{{second_header}}</div>
                </div>
              </div>
              {{#each accounts}}
              <div class="row accounts-row me-0">
                <div class="col-7 bxi-truncate"><a href="#" class="bxi-button bxi-button--link">{{name}}</a></div>
                <div class="col-5">{{amount}}</div>
              </div>
              {{/each}}
            </div>
            {{/each}}
            {{#if env.BXI_DASHBOARD_POLICY_ID}}
            <div class="mb-3 bxi-component-bg-color" data-dv-flow="static" data-policy-id="{{env.BXI_DASHBOARD_POLICY_ID}}"></div>
            {{/if}}
          </div>
        </div>
      </div>
    </section>
    <footer class="bxi-footer py-5">
      <div class="container text-center text-lg-start">
        <div class="row">
          <div class="col-lg-4 mb-3">
            <ul class="d-flex justify-content-center justify-content-lg-start ls-none ps-0 mb-3">
              <li>
                <button class="bxi-button bxi-button--outline bxi-button--md bxi-button--icon me-lg-3 me-5">
                  {{> facebookIcon }}
                </button>
              </li>
              <li>
                <button class="bxi-button bxi-button--outline bxi-button--md bxi-button--icon me-lg-3 me-5">
                  {{> twitterIcon }}
                </button>
              </li>
              <li>
                <button class="bxi-button bxi-button--outline bxi-button--md bxi-button--icon">
                  {{> instagramIcon }}
                </button>
              </li>
            </ul>
            <p class="mb-3 mb-md-0 fs-8 bxi-copyright-color">{{settings.footer.copyright}}</p>
          </div>
          <div class="col-lg-4 mb-3">
            {{#each settings.footer.links}}
            <a class="bxi-link bxi-link--white mb-2 d-block fs-6" href="#">{{this}}</a>
            {{/each}}
          </div>
          <div class="col-lg-4 mb-3">
            <a class="bxi-link bxi-link--white mb-2 d-block fs-6 fw-bold" href="#">{{settings.footer.phone_number}}</a>
            <a class="bxi-link bxi-link--white mb-2 d-block fs-6 fw-bold" href="#">{{settings.footer.email}}</a>
            <a class="bxi-link bxi-link--white mb-2 d-block fs-6 fw-bold" href="#">{{settings.footer.chat}}</a>
          </div>
        </div>
      </div>
      {{> remix }}
    </footer>
    {{> modal}}
  </body>
</html>