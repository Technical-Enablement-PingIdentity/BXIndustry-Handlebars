<!DOCTYPE html>
<html lang="en">
  {{#> head }}
    {{> airlinesBranding }}
  {{/head}}
  <body onload="bxi.pageLoad()" class="bxi airlines dashboard">
    {{> variables}}
    <header>
      <nav class="navbar navbar-expand-lg flex-wrap p-0">
        <div class="container py-2">
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
          </button>
          <a class="navbar-brand pt-0" href="#">
            <img width="150" src="{{settings.images.logo}}" alt="Logo" />
          </a>
          <div class="bxi-navbar collapse navbar-collapse bxi-zi-2 ps-0 ps-lg-2 bxi-bg-primary bxi-bg-lg-transparent" id="navbarNav">
            <ul class="navbar-nav p-2 pb-0 py-lg-3 px-lg-0 d-flex w-100">
              {{#each settings.header.links}}
              <li class="nav-item mb-2 me-0 me-xl-2 mb-lg-0"><a class="nav-link bxi-nav-link">{{this}}</a></li>
              {{/each}}
            </ul>
          </div>
          <div class="d-flex flex-row position-relative align-items-center">
            <p id="username-container" class="bxi-color-primary fw-bold d-none d-sm-flex mb-0 pt-0 me-2 mt-lg-0">{{settings.dashboard.username}}</p>
            <div class="bxi-user-icon d-flex d-lg-none bxi-bg-primary" data-bs-toggle="collapse" data-bs-target=".bxi-auth-buttons">
              {{> userIcon }}
            </div>
            <div class="d-none d-lg-flex static-user-icon me-2 rounded-1">
              {{> userIcon }}
            </div>
            <div class="bxi-auth-buttons bxi-bg-primary bxi-bg-lg-transparent collapse navbar-collapse">
              <button onclick="bxi.logout()" class="button bxi-nav-link mb-1 mb-lg-0">Log Out</button>
            </div>
          </div>
        </div>
      </nav>
    </header>
    <section class="bxi-bg-secondary">
      <div class="container fw-bold">
        <div class="d-flex justify-content-between align-items-center">
          <h1 class="bxi-header-color bxi-main-header bxi-ff-secondary py-4">{{settings.dashboard.header}}</h1>
          <div class="bxi-overview d-none d-sm-flex align-items-center p-3">
            {{{inlineSvg settings.dashboard.overview.icon}}}
            <div class="ms-4">
              <p class="bxi-header-color mb-1 fs-8">{{settings.dashboard.overview.description}}</p>
              <h4 class="bxi-header-color">{{settings.dashboard.overview.value}}</h4>
            </div>
          </div>
        </div>
        <div class="d-flex bxi-profile-tabs bxi-overflow-x-auto">
          {{#each settings.dashboard.profile_tabs}}
          <div class="bxi-header-color px-3 py-2 text-uppercase cursor-pointer text-nowrap">{{this}}</div>
          {{/each}}
        </div>
      </div>
    </section>
    <section class="container mt-3">
      <div class="d-flex flex-column flex-md-row justify-content-end">
        {{!-- See src/dashboard-buttons.hbs to update dashboard buttons --}}
        {{> dashboardButtons}}
      </div>
      <div class="row my-5">
        <div class="col-lg-7 col-xl-8">
          {{#each settings.dashboard.booked_flights}}
          <div class="mb-4 bxi-flights">
            <div class="px-4 py-3 bxi-header-color bxi-bg-secondary">{{title}}</div>
            {{#each flights}}
            <div class="d-flex justify-content-between p-4 align-items-center bxi-flight-info bxi-flights--bg-color">
              <div>
                <h5 class="bxi-flights--title-color">{{title}}</h5>
                <div>
                  <span class="me-3 bxi-flight-info--color fs-7">{{> calendarIcon }} {{date}}</span>
                  <span class="me-3 bxi-flight-info--color fs-7">{{> clockIcon }} {{time}}</span>
                </div>
              </div>
              {{#if button}}
              <button class="button button--md">{{button}}</button>
              {{/if}}
            </div>
            {{/each}}
          </div>
          {{/each}}
        </div>
        <div class="col-lg-5 col-xl-4 bxi-offers-section">
          <h1 class="bxi-secondary-color bxi-main-header bxi-ff-secondary">{{settings.dashboard.personal_offers.title}}</h1>
          {{#each settings.dashboard.personal_offers.offers}}
          <div class="mb-4 d-flex p-4 flex-column align-items-start overflow-hidden bxi-offers-section-offer position-relative">
            <img class="position-absolute top-50 start-50 translate-middle bxi-img-cover" src="{{background_image}}" />
            <h4 class="position-relative bxi-offers-section--text bxi-zi-2">{{location}}</h4>
            <h2 class="position-relative bxi-offers-section--text bxi-zi-2 fw-bold">{{price}}</h2>
            <button class="button fw-normal position-relative mt-auto mb-4 py-3 px-5">{{button}}</button>
          </div>
          {{/each}}
        </div>
      </div>
    </section>
    <footer class="bxi-footer pt-5">
      <div class="container">
        <div class="d-block mb-sm-3 mb-4">
          <ul class="d-none d-md-flex flex-wrap mb-4 p-0 ls-none">
            {{#each settings.footer.links }}
              <li class="me-4 mb-2"><a class="bxi-footer-link" href="#">{{this}}</a></li>
            {{/each}}
          </ul>
          <div class="footer-contacts mt-4 d-flex flex-column-reverse flex-md-row align-items-center align-items-md-start">
            <div class="footer-support me-0 me-md-4">
              <div class="text-center text-md-start mb-3 fs-6">{{settings.footer.phone_number}}</div>
              <button class="button button--outline py-3">Online support</button>
            </div>
            <div class="ms-0 ms-md-3">
              <div class="ms-0 mb-3 text-center text-md-start fs-6">FOLLOW US:</div>
              <ul class="d-flex align-items-center ls-none ps-0">
                <li>
                  <button class="button button--outline button--icon button--lg me-md-3 me-5">
                    {{> facebookIcon }}
                  </button>
                </li>
                <li>
                  <button class="button button--outline button--icon button--lg me-md-3 me-5">
                    {{> twitterIcon }}
                  </button>
                </li>
                <li>
                  <button class="button button--outline button--icon button--lg">
                    {{> instagramIcon }}
                  </button>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </footer>
    <section class="bxi-footer bxi-bg-secondary pb-4">
      <div class="container">
        <p class="fs-8 m-0 text-center text-md-start bxi-copyright-color">{{settings.footer.copyright}}</p>
        {{> remix }}
      </div>
    </section>
    {{> modal}}
  </body>
</html>