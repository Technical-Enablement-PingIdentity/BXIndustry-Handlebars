<!DOCTYPE html>
<html lang="en">
  {{#> head }}
    {{> airlinesBranding }}
  {{/head}}
  <body onload="bxi.pageLoad()" class="bxi airlines home">
    {{> variables}}
    <header>
      <nav class="navbar navbar-expand-lg flex-wrap p-0">
        <div class="container py-2">
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
          </button>
          <a class="navbar-brand pt-0" href="#">
            <img width="150" src="{{settings.images.logo}}" alt="Logo" />
          </a>
          <div class="bxi-navbar collapse navbar-collapse bxi-zi-2 ps-0 ps-lg-2 bxi-bg-secondary bxi-bg-lg-transparent" id="navbarNav">
            <ul class="navbar-nav p-2 pb-0 py-lg-3 px-lg-0 d-flex w-100">
              {{#each settings.header.links}}
              <li class="nav-item mb-2 me-0 me-xl-2 mb-lg-0"><a class="nav-link bxi-nav-link">{{this}}</a></li>
              {{/each}}
            </ul>
          </div>
          <div class="d-flex flex-row position-relative">
            <div class="bxi-auth-buttons bxi-bg-secondary bxi-bg-lg-transparent collapse navbar-collapse bxi-zi-2">
              {{> searchIcon class="d-none d-lg-block mt-1 me-4 bxi-icon-color-secondary" }}
              {{!-- See src/home-nav-buttons.hbs to update auth buttons --}}
              {{> homeNavButtons }}
            </div>
            <div class="bxi-user-icon bxi-bg-primary" data-bs-toggle="collapse" data-bs-target=".bxi-auth-buttons">
              {{> userIcon }}
            </div>
          </div>
        </div>
      </nav>
    </header>
    <section class="bxi-banner bxi-bg-image position-relative py-5" style="background-image: url('{{settings.home_page.banner.background_image}}')">
      <div class="container d-flex flex-column justify-content-between">
        <div>
          <h1 class="bxi-main-header bxi-banner--text">{{settings.home_page.banner.title}}</h1>
          <h4 class="bxi-banner--text">{{settings.home_page.banner.subtitle}}</h4>
        </div>
        <div class="d-flex flex-column flex-lg-row">
          {{#each settings.home_page.banner.search.inputs}}
          <div class="bxi-banner-input-container me-0 me-lg-3 mb-3 pt-2">
            <label class="fs-8 ms-3 d-block">{{label}}</label>
            <input class="border-0 pt-1" type="text" placeholder="{{placeholder}}" />
          </div>
          {{/each}}
          <button class="bxi-banner-input-button button mb-3 py-3 py-lg-0"><div>{{settings.home_page.banner.search.button}}</div>{{> arrowIcon}}</button>
        </div>
      </div>
    </section>
    <section class="additional-links d-flex justify-content-around flex-column flex-lg-row mb-5">
      {{#each settings.home_page.additional_links}}
      <div class="d-flex justify-content-center align-items-center w-100 py-4">
        {{{inlineSvg icon}}}
        <a class="button button--link text-capitalize fs-5 ms-3 fw-normal" href="#" class="ms-3">{{text}}</a>
      </div>
      {{/each}}
    </section>
    <section class="bxi-offers-section container mb-5">
      <h1 class="bxi-ff-secondary bxi-main-header fw-bold mb-4">{{settings.home_page.offers_section.title}}</h1>
      <div class="row bxi-stretch-third-md">
        {{#each settings.home_page.offers_section.offers}}
        <div class="col-md-6 col-lg-4">
          <div class="mb-4 d-flex p-4 flex-column align-items-start overflow-hidden bxi-offers-section-offer position-relative">
            <img class="position-absolute top-50 start-50 translate-middle" src="{{background_image}}" />
            <h4 class="position-relative bxi-offers-section--text bxi-zi-2">{{location}}</h4>
            <h2 class="position-relative bxi-offers-section--text bxi-zi-2 fw-bold">{{price}}</h2>
            <button class="button fw-normal position-relative mt-auto mb-4 py-3 px-5">{{button}}</button>
          </div>
        </div>
        {{/each}}
      </div>
    </section>
    <footer class="bxi-footer bxi-footer pt-5">
      <div class="container">
        <div class="d-block mb-sm-3 mb-4">
          <ul class="d-none d-md-flex flex-wrap mb-4 p-0 ls-none">
            {{#each settings.footer.links }}
              <li class="me-4 mb-2"><a class="bxi-footer-link" href="#">{{this}}</a></li>
            {{/each}}
          </ul>
          <div class="footer-contacts mt-4 d-flex flex-column-reverse flex-md-row align-items-center align-items-md-start">
            <div class="footer-support me-0 me-md-4">
              <div class="text-center text-md-start mb-3 fs-6">{{settings.footer.phone_number}}</div>
              <button class="button button--outline py-3">Online support</button>
            </div>
            <div class="ms-0 ms-md-3">
              <div class="ms-0 mb-3 text-center text-md-start fs-6">FOLLOW US:</div>
              <ul class="d-flex align-items-center ls-none ps-0">
                <li>
                  <button class="button button--outline button--icon button--lg me-md-3 me-5">
                    {{> facebookIcon }}
                  </button>
                </li>
                <li>
                  <button class="button button--outline button--icon button--lg me-md-3 me-5">
                    {{> twitterIcon }}
                  </button>
                </li>
                <li>
                  <button class="button button--outline button--icon button--lg">
                    {{> instagramIcon }}
                  </button>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </footer>
    <section class="bxi-footer bxi-bg-secondary pb-4">
      <div class="container">
        <p class="fs-8 m-0 text-center text-md-start">{{settings.footer.copyright}}</p>
        {{> remix }}
      </div>
    </section>
    {{> modal}}
  </body>
</html>