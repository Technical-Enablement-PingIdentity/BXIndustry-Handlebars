<!DOCTYPE html>
<html lang="en">
  {{#> head }}
    <style>
      :root {
        --bxi-main-font: 'Montserrat', sans-serif;
        --bxi-secondary-font: 'Poppins', serif;
        --bxi-primary-color: #A71E23;
        --bxi-secondary-color: #280A04;
        --primary-button-background: var(--bxi-primary-color);
        --primary-button-background-hover: #930909;
        --link-button-color: var(--bxi-primary-color);
        --link-button-hover-color: var(--bxi-secondary-color);
        --nav-link-button-color: #fff;
        --nav-link-button-hover-color: var(--bxi-primary-color);
        --outline-button-color: #fff;
        --outline-button-hover-color: var(--bxi-primary-color);
        --bxi-banner-text-color: #fff;
      }
    </style>
  {{/head}}
  <body class="bxi generic home">
    {{> variables}}
    <header class="masthead" style="background-image: url('https://cdn.glitch.me/e527ecf6-cfaf-462c-9a0f-da0c77633414%2Fhome-bg.jpg?v=1636660805462')">
      <nav class="navbar fixed-top navbar-expand">
        <div class="container mt-4">
          <div class="navbar-brand">
            {{> remix}}
          </div>
          <div>
            <ul class="navbar-nav ms-auto py-4 py-lg-0">
              {{!-- See src/home-nav-buttons.hbs to update auth buttons --}}
              {{> homeNavButtons}}
            </ul>
          </div>
        </div>
      </nav>
      <div class="container position-relative px-4">
        <div class="justify-content-center">
          <div class="text-center">
            <h1>{{settings.heading}}</h1>
            <span class="fs-3 fw-bold">{{settings.sub_heading}}</span>
          </div>
        </div>
      </div>
    </header>
    <div class="container p-4">
      <div class="justify-content-center text-center">
        <div data-dv-flow="static" data-policy-id="{{env.BXI_GENERIC_POLICY_ID}}"></div>
        <hr class="my-4" />
      </div>
    </div>
    {{> modal}}
  </body>
</html>
