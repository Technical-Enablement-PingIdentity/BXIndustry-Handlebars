<!DOCTYPE html>
<html lang="en">
  {{#> head }}
    {{> eatsBranding }}
  {{/head}}
  <body onload="bxi.pageLoad()" class="bxi eats home">
    {{> variables}}
    <header>
      <nav class="navbar navbar-expand-lg flex-wrap p-0">
        <div class="container py-2">
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
          </button>
          <a class="navbar-brand pt-0" href="#">
            <img width="150" src="{{settings.images.logo}}" alt="Logo" />
          </a>
          <div class="bxi-navbar collapse navbar-collapse bxi-zi-5 ps-0 ps-lg-2 bxi-bg-primary bxi-bg-lg-transparent" id="navbarNav">
            <ul class="navbar-nav p-2 pb-0 py-lg-3 px-lg-0 d-flex w-100">
              {{#each settings.header.links}}
              <li class="nav-item mb-2 me-3 me-xl-3 mb-lg-0">
                <a class="bxi-link bxi-link-light--secondary bxi-link-lg--secondary">{{this}}</a>
              </li>
              {{/each}}
            </ul>
          </div>
          <div class="d-flex flex-row position-relative">
            <div class="bxi-auth-buttons bxi-bg-secondary bxi-bg-lg-transparent collapse navbar-collapse bxi-zi-2 pb-2 pb-lg-0">
              {{!-- {{> notificationIcon class="d-none d-lg-block me-4 bxi-icon-color-secondary notification-icon" }} --}}
              {{> groceryIcon class="d-none d-lg-block me-4 bxi-icon-color-secondary"}}
              {{> favoriteIcon class="d-none d-lg-block me-4 bxi-icon-color-secondary"}}
              {{!-- See src/home-nav-buttons.hbs to update auth buttons --}}
              {{> homeNavButtons }}
            </div>
            <div class="bxi-user-icon bxi-bg-primary" data-bs-toggle="collapse" data-bs-target=".bxi-auth-buttons">
              {{> userIcon }}
            </div>
          </div>
        </div>
      </nav>
    </header>
    <section class="bxi-banner__image bxi-bg-image position-relative d-flex align-items-end" style="background-image: url('{{settings.home_page.banner.image}}')">
      <div class="bxi-banner-content d-flex flex-column justify-content-center">
              <div class="container">
                <div class="row">
                  <div class="col-lg-7 bxi-zi-2">
                <h2 class="bxi-main-header-xl lh-1 bxi-ff-secondary bxi-banner--text my-4">{{settings.home_page.banner.title}}</h2>
                <h5 class="bxi-banner--text fw-bold mb-5">{{settings.home_page.banner.subtitle}}</h5>
                </div>
                </div>
              </div>
      </div>
    </section>
    <section class="container my-5">
      <h1 class="bxi-main-header bxi-color-secondary bxi-ff-secondary">{{settings.home_page.programs_section.title}}</h1>
      <div class="row">
        {{#each settings.home_page.programs_section.programs}}
        <div class="col-md-4">
          <div class="bxi-program mb-4 overflow-hidden position-relative cursor-pointer">
            <img class="bxi-img-cover position-absolute top-50 start-50 translate-middle" src="{{image}}" />
            <div class="w-100 h-100 bxi-program-overlay position-relative bxi-zi-2 d-flex align-items-end justify-content-center">
              <h4 class="bxi-program-color mb-4 fw-bold">{{title}}</h4>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </section>
    <footer class="bxi-footer pt-5 pb-4">
      <div class="container">
        <div class="d-block mb-sm-3 mb-4 d-lg-flex justify-content-between">
          <ul class="d-none d-md-flex flex-wrap mb-4 p-0 ls-none">
            {{#each settings.footer.links }}
              <li class="me-4 mb-2"><a class="bxi-link bxi-link-light--primary" href="#">{{this}}</a></li>
            {{/each}}
          </ul>
          <div class="footer-contacts d-flex flex-column-reverse flex-md-row align-items-center align-items-md-start">
            <div class="footer-support me-0 me-md-4">
              <div class="text-center text-md-start mb-3 fs-6">{{settings.footer.phone_number}}</div>
              <button class="bxi-button bxi-button--md py-3 bxi-button--outline mt-1">Online support</button>
            </div>
            <div class="ms-0 ms-md-3">
              <div class="ms-0 mb-3 text-center text-md-start fs-6">FOLLOW US:</div>
              <ul class="d-flex align-items-center ls-none ps-0">
                <li>
                  <button class="bxi-button bxi-button--outline bxi-button--icon bxi-button--lg me-md-3 me-5">
                    {{> facebookIcon }}
                  </button>
                </li>
                <li>
                  <button class="bxi-button bxi-button--outline bxi-button--icon bxi-button--lg me-md-3 me-5">
                    {{> twitterIcon }}
                  </button>
                </li>
                <li>
                  <button class="bxi-button bxi-button--outline bxi-button--icon bxi-button--lg">
                    {{> instagramIcon }}
                  </button>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <section class="container">
        <p class="fs-8 m-0 text-md-start bxi-copyright-color">{{settings.footer.copyright}}</p>
        {{> remix }}
      </section>
    </footer>
    {{> modal}}
  </body>
</html>