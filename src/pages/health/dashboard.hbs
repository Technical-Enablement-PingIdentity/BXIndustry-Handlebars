<!DOCTYPE html>
<html lang="en">
  {{#> head }}
    {{> healthBranding }}
  {{/head}}
  <body onload="bxi.pageLoad()" class="bxi health dashboard">
    {{> variables}}
    <header class="bxi-header bxi-banner">
      <nav class="navbar navbar-expand-lg pt-lg-4 flex-wrap navbar-dark">
        <div class="container">
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
          </button>
          <a class="navbar-brand py-2" href="#">
            <img width="200" src="{{settings.images.dashboard_logo}}" alt="Logo" />
          </a>
          <div class="d-flex flex-row position-relative">
            {{> messageIcon class="mt-2 me-3 d-none d-lg-block" }}
            <div class="bxi-auth-buttons bxi-bg-secondary bxi-bg-lg-transparent collapse navbar-collapse p-3 py-lg-1">
              {{> userIcon class="d-none d-lg-inline me-3"}}
              <button onclick="bxi.logout()" class="button button--nav-link">Log Out</button>
            </div>
            <div class="bxi-user-icon bxi-bg-primary" data-bs-toggle="collapse" data-bs-target=".bxi-auth-buttons">
              {{> userIcon }}
            </div>
          </div>
        </div>
        <div class="container">
          <div class="bxi-navbar bxi-bg-secondary bxi-bg-lg-transparent collapse navbar-collapse mt-2" id="navbarNav">
            <ul class="navbar-nav p-3 p-lg-0 py-lg-4">
              {{#each settings.header.links.items}}
              <li class="nav-item pb-2"><a class="button button--nav-link fs-6 ps-0 pe-lg-4">{{this}}</a></li>
              {{/each}}
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <section class="component-bg-color">
      <div class="container py-3">
        <div class="d-flex flex-column flex-md-row justify-content-center justify-content-md-between align-items-center">
          <h2 class="fw-bold">{{settings.dashboard.welcome}} <span class="fw-bold" id="username-container">{{settings.dashboard.username}}</span></h2>
          <div class="d-flex flex-column flex-md-row justify-content-end">
            {{!-- See src/dashboard-buttons.hbs to update dashboard buttons --}}
            {{> dashboardButtons}}
          </div>
        </div>
      </div>
    </section>
    <section class="container">
      <div class="portal">
        <div class="row mt-4">
          <div class="col-lg-4 order-2 order-lg-1">
            <ul class="ls-none ps-0 mb-3">
              {{#each settings.dashboard.sidebar.links}}
              <li class="mb-2 ps-5 p-3 component-bg-color rounded-3 position-relative portal-sidebar-dropdown cursor-pointer bxi-ff-secondary fw-lighter">
                {{this}}
              </li>
              {{/each}}
            </ul>
            <div class="events-hero rounded-4 overflow-hidden mx-auto pb-4 mb-4 component-bg-color">
              <img class="events-hero-image d-block w-100" src="{{settings.dashboard.events_hero.banner_image}}" />
              <h3 class="p-4 events-hero-header fw-bold">{{settings.dashboard.events_hero.title}}</h3>
              <p class="ps-4 fs-6 fw-light bxi-ff-secondary">{{settings.dashboard.events_hero.description}}</p>
              <a href="#" class="ps-4 button button--link">{{settings.dashboard.events_hero.link}}</a>
            </div>
          </div>
          <div class="col-lg-8 order-1 order-lg-2">
            <div class="row mb-3">
              <div class="col-sm-7 text-center text-sm-start">
                <h4 class="mb-3 mb-sm-0 mt-1 fw-boldish">{{settings.dashboard.portal.title}}</h4>
              </div>
              <div class="col-sm-5 d-flex justify-content-center justify-content-sm-end">
                <div class="portal-header-dropdown component-bg-color py-2 ps-3 pe-5 rounded-1 position-relative cursor-pointer bxi-ff-secondary fw-light">
                  {{settings.dashboard.portal.dropdown_placeholder}}
                </div>
              </div>
            </div>
            <div class="component-bg-color p-3 mb-4">
              <div class="row mb-3">
                <div class="col-lg-6 mb-3 mb-lg-0">
                  <h6 class="bxi-ff-secondary fw-bold mb-3">{{settings.dashboard.portal.component_header}}</h6>
                  <h6 class="bxi-ff-secondary fw-light mb-0 text-nowrap">{{settings.dashboard.portal.patient_number_label}} <span class="bxi-ff-secondary fw-light text-decoration-underline">{{settings.dashboard.portal.patient_number}}</span></h6>
                </div>
                <div class="patient-links col-lg-6 d-flex align-items-end justify-content-start justify-content-lg-end">
                  {{#each settings.dashboard.portal.patient_links}}
                  <a class="button button--link">{{this}}</a>
                  {{/each}}
                </div>
              </div>
              <div class="row g-3">
                {{#each settings.dashboard.portal.actions}}
                <div class="col-lg-4">
                  <div class="action-tile d-flex flex-column align-items-center text-center p-3 h-100">
                    <img class="mb-4" src="{{icon}}" />
                    <h3 class="mb-4 fw-bold">{{header}}</h3>
                    <p class="bxi-ff-secondary fw-light">{{description}}</p>
                    <button class="button button--lg mt-auto">{{button_text}}</button>
                  </div>
                </div>
                {{/each}}
              </div>
              <h6 class="bxi-ff-secondary fw-bold my-3">{{settings.dashboard.portal.links_header}}</h6>
              <div class="quick-links d-flex flex-wrap">
                {{#each settings.dashboard.portal.quick_links}}
                <a class="button button--link text-nowrap me-4">
                  <img class="me-1" src="{{icon}}" />
                  {{text}}
                </a>
                {{/each}}
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <footer class="bxi-footer bxi-footer-color py-5">
      <div class="container text-center text-lg-start">
        <div class="row">
          <div class="col-lg-3 mb-3">
            <ul class="d-flex justify-content-center justify-content-lg-start ls-none ps-0 mb-3">
              <li>
                <button class="button button--outline button--icon me-lg-3 me-5">
                  {{> facebookIcon }}
                </button>
              </li>
              <li>
                <button class="button button--outline button--icon me-lg-3 me-5">
                  {{> twitterIcon }}
                </button>
              </li>
              <li>
                <button class="button button--outline button--icon">
                  {{> instagramIcon }}
                </button>
              </li>
            </ul>
            <p class="mb-3 mb-md-0 fs-8 bxi-copyright-color bxi-ff-secondary">{{settings.footer.copyright}}</p>
          </div>
          <div class="col-lg-3 mb-3">
            {{#each settings.footer.links_left}}
            <a class="bxi-footer-link mb-2 d-block fs-6" href="#">{{this}}</a>
            {{/each}}
          </div>
          <div class="col-lg-3 mb-3">
            <a class="bxi-footer-link mb-2 d-block fs-6 fw-bold" href="#">{{settings.footer.phone_number}}</a>
            <a class="bxi-footer-link mb-2 d-block fs-6 fw-bold" href="#">{{settings.footer.email}}</a>
            <a class="bxi-footer-link mb-2 d-block fs-6 fw-bold" href="#">{{settings.footer.chat}}</a>
          </div>
          <div class="col-lg-3 mb-3">
            {{#each settings.footer.links_right}}
            <a class="bxi-footer-link mb-2 d-block fs-6" href="#">{{this}}</a>
            {{/each}}
          </div>
        </div>
      </div>
      <section class="container">
        <div class="d-flex justify-content-between align-items-center flex-column flex-md-row">
          {{> remix }}
        </div>
      </section>
    </footer>
    {{> modal}}
  </body>
</html>