<h1 class="dialog-header text-center bxi-ff-secondary fw-bold mb-4">Create an account</h1>
<form class="dialog-container bxi-color-light" id="bxForm">
  <div class="mb-3">
    <label for="firstName" class="form-label mb-1">First name *</label>
    <input type="text" id="firstName" name="firstName" class="form-control" />
  </div>
  <div class="mb-3">
    <label for="lastName" class="form-label mb-1">Last name *</label>
    <input type="text" id="lastName" name="lastName" class="form-control" />
  </div>
  <div class="mb-3">
    <label for="email" class="form-label mb-1">Email *</label>
    <input type="email" id="email" name="email" class="form-control" />
  </div>
  <div class="mb-3">
    <label for="region" class="form-label mb-1">Country or region *</label>
    <input type="email" id="region" name="region" class="form-control" />
  </div>
  <div class="mb-3">
    <label for="password" class="form-label mb-1">Create password *</label>
    <input type="password" id="password" name="password" class="form-control" />
  </div>
  <div class="mb-4">
    <label for="repeatPassword" class="form-label mb-1">Repeat password *</label>
    <input type="password" id="repeatPassword" name="repeatPassword" class="form-control" />
  </div>
  <p class="mb-4 text-center">
    By clicking on the "Create Account" button, you are agreeing to the
    <a href="#" class="button button--link">Terms of Use</a>
    and
    <a href="#" class="button button--link">Privacy Policy</a>
  </p>
  <button class="button button--md button--submit d-block mx-auto mb-4" type="submit">Create account</button>
  <p class="text-center">
    Already have an account?
    <a href="#" class="button button--link">
      Log in
    </a>
  </p>
</form>
<!--/ registration -->