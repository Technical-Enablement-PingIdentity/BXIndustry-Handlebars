{
  "name": "bxindustry-handlebars",
  "version": "0.1.0",
  "type": "module",
  "description": "A simple Node app built on fastify, instantly up and running. Built to be cloned, configured and run locally.",
  "main": "server.js",
  "scripts": {
    "start": "sass scss/index.scss:public/styles.css && node server.js",
    "dev": "concurrently --kill-others \"sass --watch scss/index.scss:public/styles.css\" \"nodemon server.js --https\""
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/static": "^8.2.0",
    "@fastify/view": "^11.1.0",
    "fastify": "^5.3.3",
    "handlebars": "^4.7.8",
    "handlebars-utils": "^1.0.6",
    "sass": "^1.77.4",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": "22.x"
  },
  "repository": {
    "url": "https://glitch.com/edit/#!/glitch-hello-node"
  },
  "license": "MIT",
  "keywords": [
    "node",
    "glitch",
    "express"
  ]
}
